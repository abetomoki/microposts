<body>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<h1>Edit Profile</h1>

<div class="media">
  <h3><%= @user.name %></h3>
  <%= gravatar_for @user %>
  <hr>
</div>

<% if @user.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @user.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

<%= form_for (@user), method: :patch  do  |f| %>

<h3>email</h3>
<%= f.text_field :email, class: 'form-control' %><br>

<h3>biography</h3>
<%= f.text_area :biography, class: 'form-control' %><br>

<h3>location</h3>
<%= f.text_area :location, class: 'form-control' %><br>

<h4><%= f.submit %></h4>
<% end %>
<h4><%= link_to "my page", user_path %></h4>
    </div>
</div>
</body>

